.aniLink
  display: inline-block
  position: absolute
  top: 40px
  left: 40px
  padding: 4px 10px
  color: #000
  transition: color 0.3s ease
  
  
  &:hover
    
    color: #333
    
    &:before
      width: 100%
      transition-delay: 0s
    
    &:after
      width: 100%
      transition-delay: 0.2s
    
    .right
      height: 100%
      transition-delay: 0.1s

    .left
      height: 100%
      transition-delay: 0.3s
  
  .right
    position: absolute
    display: block
    bottom: 0
    right: 0
    width: 2px
    height: 0
    background: #333
    transition: height 0.1s linear
    transition-delay: 0.2s

  .left 
    position: absolute
    display: block
    top: 0
    left: 0
    width: 2px
    height: 0
    background: #333
    transition: height 0.1s ease
    transition-delay: 0s

    
  &:after
    content: ''
    position: absolute
    top: 0
    right: 0
    height: 2px
    width: 0
    background: #333
    transition: width 0.1s linear
    transition-delay: 0.1s
  
  &:before
    content: ''
    position: absolute
    bottom: 0
    left: 0
    height: 2px
    width: 15px
    background: #333
    transition: width 0.1s linear
    transition-delay: 0.3s
  
  